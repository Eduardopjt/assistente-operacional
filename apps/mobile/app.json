{
  "expo": {
    "name": "Assistente Operacional",
    "slug": "assistente-operacional",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#0F1115"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.assistente.operacional",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Permite tirar fotos para anexar em projetos ou tarefas.",
        "NSPhotoLibraryUsageDescription": "Permite selecionar fotos da galeria para anexar em projetos ou tarefas."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F1115"
      },
      "package": "com.assistente.operacional",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#0F1115",
          "image": "./assets/splash.png",
          "imageWidth": 200
        }
      ]
    ],
    "scheme": "assistente",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID_HERE"
      }
    }
  }
}
