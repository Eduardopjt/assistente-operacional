{
  "name": "assistente-operacional",
  "version": "1.0.0",
  "private": true,
  "description": "Operational decision assistant - mobile + desktop",
  "scripts": {
    "dev:mobile": "pnpm --filter mobile dev",
    "dev:desktop": "pnpm --filter desktop dev",
    "build:mobile": "pnpm --filter mobile build",
    "build:desktop": "pnpm --filter desktop build",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "typescript": "~5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
